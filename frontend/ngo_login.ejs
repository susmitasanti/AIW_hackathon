    <div class="container mt-5 myclass my-0" align="center">
        <form onsubmit="handleSubmit(event)">
            <div class="mb-3 my-3">
                <label for="exampleInputEmail1" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp"
                    required />
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script>
        const handleSubmit = async (event) => {
            event.preventDefault();
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            const response = await fetch("http://localhost:3000/auth/ngo-login", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json", // Set the content type to JSON
                },
                body: JSON.stringify({ username: username, password: password })
            });

            const responseData = await response.json();
            if (!responseData.success) {
                alert(responseData.msg);
            } else {
                alert("success");
                window.location.href = "/api/ngo-dashboard";
            }

            // Optionally, you can redirect to a different page on successful login:
            // if (responseData.success) {
            //     window.location.href = "/"; // Replace "/dashboard" with the desired URL
            // }
        };
    </script>
