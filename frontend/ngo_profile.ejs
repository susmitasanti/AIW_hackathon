                    <%= user.phone %>
                </span>
                <i class="fas fa-pencil-alt edit-icon" onclick="edit('contact')"></i>
                <input type="text" id="contactInput" class="edit-input" value="<%= user.phone %>"
                    style="display: none;">
            </div>
            <div class="user-info">
                <label for="password">Change Password</label>
                <span id="passwordSpan">
                </span>
                <i class="fas fa-pencil-alt edit-icon" onclick="edit('password')"></i>
                <input type="password" id="passwordInput" class="edit-input"
                    style="display: none;">
            </div>

            <% }); %>

