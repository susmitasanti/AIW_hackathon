<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food Donation Form</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


  <style>
    body {
      background-image: url(donate.png);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      display: flex;
      justify-content: relative;
      flex-direction: column;
      height: 100vh;

    }

    .myclass {
      justify-content: center;
      height: relative;
      width: 500px;
      background-color: #91f199d0;
      color: black;
      padding: 20px;
      border-radius: 30px;
      box-shadow: 10px 10px 5px 5px #5898b8;
      align-items: center;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="http://localhost:3000/api/dashboard">Requests</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/api/dashboard-acceptedRequests">Accepted</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="http://localhost:3000/api/dashboard-delivered">Delivered</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="http://localhost:3000/api/donation-form">Donation
              Form</a>
          </li>
        </ul>
        <div class="d-flex mx-3">
          <button type="submit" class="btn btn-success" onclick="logout()">Logout</button>
      </div>
      </div>
    </div>
  </nav>
  <div class="myalert">

  </div>

  <div class="container mt-5 myclass my-0">
    <div class="card-body">
      <h2 class="mb-4">Donate now !!</h2>
      <form onsubmit="handleSubmit(event)">
        <label for="foodName">Food Name:</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter food name" required>


        <label for="quantity">Quantity:</label>
        <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter quantity" required>
        <br>

        <input type="radio" id="vegRadio" name="type"
            value="Veg" required>
          <label class="form-check-label" for="vegRadio">Vegetarian</label>

          <input type="radio" id="nonVegRadio" name="type"
            value="Non-Veg" required>
          <label class="form-check-label" for="nonVegRadio">Non-Vegetarian</label>
          <br><br>

        <label for="shelf_life">Shelf Life:</label>
        <input type="text" class="form-control" id="shelf_life" name="shelf_life" placeholder="Enter shelf life" required>

        <label for="cooked_on">Cooked On:</label>
        <input type="date" class="form-control" id="cooked_on" name="cooked_on" required>

        <label for="cooked_att">Cooked At:</label>
        <input type="time" class="form-control" id="cooked_at" name="cooked_at" required><br>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <script>
    const handleSubmit = async (event) => {
      event.preventDefault();
      let selected_type;
      const food_name = document.getElementById("name").value;
      const quantity = document.getElementById("quantity").value;
      const shelf_life = document.getElementById("shelf_life").value;
      const cooked_on = document.getElementById("cooked_on").value;
      const cooked_at = document.getElementById("cooked_at").value;
  
      const vegRadio = document.getElementById("vegRadio");
      const nonVegRadio = document.getElementById("nonVegRadio");
      if (vegRadio.checked) {
        selected_type = vegRadio.value;
      } else if (nonVegRadio.checked) {
        selected_type = nonVegRadio.value;
      }
  
      const response = await fetch("http://localhost:3000/api/donate", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          quantity: quantity,
          name: food_name,
          type: selected_type,
          shelf_life: shelf_life,
          cooked_on: cooked_on,
          cooked_at: cooked_at,
        }),
      });
  
      if (response.ok) {
        document.getElementById("name").value = "";
        document.getElementById("quantity").value = "";
        document.getElementById("vegRadio").checked = true;
        document.getElementById("shelf_life").value = "";
        document.getElementById("cooked_on").value = "";
        document.getElementById("cooked_at").value = "";
  
        // Create a Bootstrap alert element
        const successMessage = document.createElement("div");
        successMessage.classList.add("alert", "alert-success", "my-3");
        successMessage.setAttribute("role", "alert");
        successMessage.textContent = "Form Submitted Successfully";
  
        // Append the alert to the form container
        document.querySelector(".myalert").appendChild(successMessage);
  
        // Remove the alert after 2 seconds (2000ms)
        setTimeout(() => {
          successMessage.remove();
        }, 1000);
      } else {
        const successMessage = document.createElement("div");
        successMessage.classList.add("alert", "alert-danger", "my-3");
        successMessage.setAttribute("role", "alert");
        successMessage.textContent = "Form Submission Failed";
  
        // Append the alert to the form container
        document.querySelector(".myalert").appendChild(successMessage);
  
        // Remove the alert after 2 seconds (2000ms)
        setTimeout(() => {
          successMessage.remove();
        }, 1000);
      }
    };

    function logout(){
      const response = fetch("http://localhost:3000/auth/logout", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json", // Set the content type to JSON
                },
            });
          
            window.location.href="/login";
          }
  </script>

</body>

</html>